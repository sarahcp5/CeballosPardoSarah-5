html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
        title='Vista de Productos'
    body
        div(class="container-fluid bg-light")
            h1(class="text-primary")='Vista de Productos'
            
            if productos.length == 0
                div(class="container-fluid bg-warning")
                    h3(class="text-dark")='No se encontraron productos'
            else 
                table(class="table table-dark table-striped align-middle")
                    tr
                        th='Nombre'
                        th='Precio'
                        th='Foto'

                    each producto in productos
                        tr
                            td(class="table-dark")= producto.title
                            td(class="table-dark")= producto.price
                            td(class="table-dark")
                                img(src=producto.thumbnail width="100px")
            br
            br
            div(class="col-md-12 text-center")
                a(href="/" class="btn btn-success")='Agregar Producto'
            br